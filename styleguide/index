    	</div>
    	<div class="card soft">
    		<h3>Vertical Lined Border</h3>
    		<script>makeTable('table vertical border lined striped')</script>
    	</div>
    	<div class="card soft">
    		<h3>Lined</h3>
    		<script>makeTable('table lined')</script>
    	</div>
    	<div class="card soft">
    		<h3>Lined All</h3>
